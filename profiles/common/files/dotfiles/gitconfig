# Git configuration entry point
# Config fragments live in profiles/{profile}/files/gitconfig/*.gitconfig
# and are assembled into ~/.config/git/conf.d/ by the gitconfig role

# Manual local overrides (not managed by Ansible)
[include]
path = ~/.gitconfig.local

# Profile-managed fragments (generated by gitconfig role)
[include]
path = ~/.config/git/conf.d/includes.gitconfig
