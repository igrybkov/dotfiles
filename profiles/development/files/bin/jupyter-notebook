#!/bin/bash

# A proxy command to run Jupyter Notebook or Jupyter Lab using either the local Python installation or Docker.

if command -v jupyter &>/dev/null; then
  jupyter notebook
elif command -v docker &>/dev/null; then
  docker run -it --rm -p 8888:8888 -v "${PWD}":/home/jovyan/local quay.io/jupyter/datascience-notebook:2024-05-16
else
  echo "Neither Docker nor Jupyter is installed. Please install one of them."
  exit 1
fi
